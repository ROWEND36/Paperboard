<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:gravity="center"
	android:padding="10dp"
	android:visibility="gone"
	android:weightSum="7"
    android:orientation="vertical">
    <EditText
		android:id="@+id/colour_pickerRGBValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		/>

	<SeekBar
		android:id="@+id/colour_pickerRGB_R"
		android:layout_width="fill_parent"
		android:layout_height="50dp"/>
	<EditText
		android:id="@+id/colour_pickerRGB_RValue"
		android:layout_width="80dp"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
		/>

	<SeekBar
		android:id="@+id/colour_pickerRGB_G"
		android:layout_width="fill_parent"
		android:layout_height="50dp"/>
	<EditText
		android:id="@+id/colour_pickerRGB_GValue"
		android:layout_width="80dp"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
	/>

	<SeekBar
		android:id="@+id/colour_pickerRGB_B"
		android:layout_width="fill_parent"
		android:layout_height="50dp"/>
	<EditText
		android:id="@+id/colour_pickerRGB_BValue"
		android:layout_marginBottom="10dp"
		android:layout_width="80dp"
		android:layout_height="wrap_content"
	/>
</LinearLayout>
